# vim: set ft=perl :

if (defined $driver) {
	eval {
		if (grep /favorites/, $driver->tables) {
			$driver->delete_table(-table => 'favorites');
		}

		if (grep /folks/, $driver->tables) {
			$driver->delete_table(-table => 'folks');
		}
	};

	if ($@) {
		die "WAS NOT ABLE TO CLEAN UP TEST GRACEFULLY...THERE MAY BE TABLES NAMED folks OR favorites IN THE TEST DATABASE: $@";
	}
}

1
